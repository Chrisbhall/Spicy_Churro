<!DOCTYPE html>
<html lang="en">
<head id="head">
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
</head>
<script>

  $(function(){
    $("#head").load("/head.html");
    $("#header").load("/header.html");
    $("#cart").load("/cart.html");
    $("#footer").load("/footer.html");
  });
  // $(function(){
